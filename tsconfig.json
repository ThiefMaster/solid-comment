{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "dom"
    ],
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "example",
    "node_modules",
    "dist"
  ]
}
